
	<% if flash[:notice] %>
		<div id='notice'>
			<%= flash[:notice] %>
		</div>  
	<% end %>

	<% if flash[:errors] && !flash[:errors].empty? %>
  		<p> Sorry, there were the following problems with the form.</p> 
  		<ul id="errors">
    		<% flash[:errors].each do |error| %>
      			<li><%= error %></li>
    		<% end %>
  		</ul>
	<% end %>