<body>
	<% if current_user %>
	  Welcome, <%= current_user.email %>
	<% end %>
	<% if flash[:errors] && !flash[:errors].empty? %>
  		<p> Sorry, there were the following problems with the form.</p> 
  		<ul id="errors">
    		<% flash[:errors].each do |error| %>
      			<li><%= error %></li>
    		<% end %>
  		</ul>
	<% end %>
	<%= yield %>
</body>

